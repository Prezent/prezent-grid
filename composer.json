    "keywords": ["grid", "datagrid", "list"],
    "homepage": "http://www.prezent.nl",
    "require": {
        "php": "^7.0",
        "ext-intl": "*",
        "symfony/options-resolver": "^3.0|^4.0|^5.0",
        "symfony/property-access": "^3.0|^4.0|^5.0",
        "twig/twig": "^2.0|^3.0"
    },
    "require-dev": {
        "twig/string-extra": "^3.0"
    },
    "suggest": {
        "twig/string-extra": "To use the truncate filter"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sander Marechal",
            "email": "sander@prezent.nl"
        },
        {
            "name": "Prezent Internet B.V.",
            "email": "github@prezent.nl"
        }
    ],
    "autoload": {
        "psr-4": { "Prezent\\Grid\\": "src/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
